{
  "name": "freespeechvue",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "cover": "TEST_COVERAGE=true nyc --reporter=text --mode development npm run test:unit ",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "lint:nofix": "vue-cli-service lint --no-fix --max-warnings 0",
    "build:emoji": "node buildScripts/buildEmojiPickerOptions.js"
  },
  "dependencies": {
    "core-js": "^3.6.4",
    "file-saver": "^2.0.2",
    "marked": "^0.8.2",
    "register-service-worker": "^1.7.1",
    "v-emoji-picker": "^2.3.3",
    "vue": "^2.6.10",
    "vue-i18n": "^8.16.0",
    "vue-router": "^3.1.6",
    "vuedraggable": "^2.23.2",
    "vuetify": "^2.2.19",
    "vuex": "^3.1.3",
    "vuex-persist": "^2.2.0"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@vue/cli-plugin-babel": "~4.2.3",
    "@vue/cli-plugin-eslint": "~4.2.3",
    "@vue/cli-plugin-pwa": "~4.2.3",
    "@vue/cli-plugin-unit-mocha": "~4.2.3",
    "@vue/cli-service": "^3.0.5",
    "@vue/test-utils": "1.0.0-beta.31",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.1.2",
    "clone-deep": "^4.0.1",
    "dompurify": "^2.0.8",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.1.2",
    "istanbul-instrumenter-loader": "^3.0.1",
    "material-design-icons-iconfont": "^5.0.1",
    "null-loader": "^3.0.0",
    "nyc": "^15.0.0",
    "raw-loader": "^4.0.0",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.0",
    "vue-cli-plugin-i18n": "^0.6.1",
    "vue-cli-plugin-vuetify": "^2.0.5",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.4.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "quotes": [
        2,
        "single",
        {
          "avoidEscape": true
        }
      ],
      "semi": [
        2,
        "always"
      ],
      "indent": [
        "error",
        "tab"
      ],
      "vue/html-indent": [
        "error",
        "tab",
        {
          "alignAttributesVertically": false,
          "closeBracket": 0
        }
      ],
      "object-property-newline": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "nyc": {
    "instrument": false,
    "sourceMap": false,
    "include": [
      "src/**/*.{js,vue}"
    ],
    "extension": [
      ".js",
      ".vue"
    ]
  }
}
